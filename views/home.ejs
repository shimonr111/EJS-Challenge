<%- include("partials/header") -%>

<h1>Home</h1>
<p><%=homeText%></p>
<% for (var i=0; i<postText.length; i++){ %>
  <h1><%=postText[i].title%></h1>
  <% if (postText[i].content.length > 100) { %>
    <p><%=postText[i].content.substring(0, 100) + " ... " %> <a href="http://localhost:3000/posts/<%=postText[i].title%>" >Read More</a></p>
  <% } else { %>
    <p><%=postText[i].content %> <a href="http://localhost:3000/posts/<%=postText[i].title%>" >Read More</a></p>
  <% } %>
<% } %>


<%- include("partials/footer") -%>
